<p id="notice"><%= notice %></p>

<h1>Test Models</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @test_models.each do |test_model| %>
      <tr>
        <td><%= test_model.title %></td>
        <td><%= test_model.body %></td>
        <td><%= test_model.user_id %></td>
        <td><%= link_to 'Show', test_model %></td>
        <td><%= link_to 'Edit', edit_test_model_path(test_model) %></td>
        <td><%= link_to 'Destroy', test_model, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test Model', new_test_model_path %>
